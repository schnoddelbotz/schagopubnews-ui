<div class="container-fluid">
	<h1>{{model.length}} articles</h1>

	{{#unless model.length}}
	<p>Surprisingly, zero articles found. Maybe add one? Click somewhere, somewhen.</p>
	{{/unless}}

	<ul>
	{{#each model as |article|}}
	    <li>
	    	<LinkTo @route="article.edit" @model={{article}}><FaIcon @icon="edit" class="fa-sm fa-fw mr-2 text-gray-400" />Edit</LinkTo>
	    	<LinkTo @route="article.show" @model={{article}}><FaIcon @icon="eye" class="fa-sm fa-fw mr-2 text-gray-400" />Show</LinkTo>
	    	<LinkTo @route="article.show" @model={{article}}><b>{{ article.title }}</b></LinkTo>
	    	<br/>
	        <code>Published:</code> <i>{{ article.publishedAt }}</i>
	        <br/>
	        <code>Excerpt:</code> <i>{{ excerpt article.body }}</i>
	    </li>
	{{/each}}
	</ul>
</div>

{{outlet}}